---
// src/components/Footer.astro
// No se necesita TypeScript aquí porque el componente es estático,
// pero si recibiera props, las definiríamos aquí.
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-gray-400 font-sans py-12">
  <div class="container mx-auto px-6 lg:px-8">
    <div
      class="flex flex-col md:flex-row justify-between text-center md:text-left space-y-8 md:space-y-0"
    >
      <div class="flex-1">
        <h3 class="text-white text-xl font-bold mb-2">ALCAAN</h3>
        <p class="text-sm">Desarrollador Web</p>
      </div>

      <div class="flex-1">
        <h4 class="text-white font-semibold mb-3">Navegación</h4>
        <ul class="space-y-2">
          <li>
            <a
              href="#proyectos"
              class="hover:text-blue-400 transition-colors"
              >Proyectos</a>
          </li>
          <li>
            <a
              href="#sobre-mi"
              class="hover:text-blue-400 transition-colors"
              >Sobre mí</a>
          </li>
          <li>
            <a
              href="#blog"
              class="hover:text-blue-400 transition-colors"
              >Blog</a>
          </li>
        </ul>
      </div>

      <div class="flex-1">
        <h4 class="text-white font-semibold mb-3">Contacto</h4>
        <div class="flex justify-center md:justify-start space-x-4">
          <a
            href="https://github.com/alcaan16"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-blue-400 transition-colors"
            >GitHub</a
          >
          <a
            href="#"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-blue-400 transition-colors"
            >LinkedIn</a
          >
          <a
            href="#"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-blue-400 transition-colors"
            >Twitter</a
          >
        </div>
      </div>
    </div>

    <div class="text-center text-xs mt-10 pt-6 border-t border-gray-700">
      <p>&copy; {currentYear} Angel Alferez Castro | Todos los derechos reservados.</p>
    </div>
  </div>
</footer>
