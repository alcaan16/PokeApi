---
interface Props {
  name: string;
  img: string | undefined;
  url: string;
  id: number;
}
const { name, img, url, id } = Astro.props;
//href={`/launch/${name}`}
//href={url}
---

<a
  href={`/pokemons/${id}`}
  class="rounded-4xl border shadow-md bg-gray-800 border-gray-700 hover:scale-105 hover:bg-gray-700 hover:border-red-500 transition flex flex-col"
>
  <picture class="flex justify-center p-4">
    <img
      class="mb-5 rounded-lg"
      src={img}
      alt={`Artwork de ${name}`}
      width="150
      "
    />
  </picture>

  <header class="p-4 flex flex-col items-center text-center">
    <p class="mb-4 font-light text-gray-400">
      ID: {id}
    </p>
    <h2 class="my-2 text-2xl font-bold tracking-tight text-white">
      <p>Nombre Pokemon:</p>
      <p>{name.toUpperCase()}</p>
    </h2>

    <p class="mb-4 font-light text-gray-400">
      Url: {url}
    </p>
  </header>
</a>
