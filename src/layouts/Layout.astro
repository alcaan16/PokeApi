---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
  lang="es"
  class="h-full"
>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>{title}</title>
  </head>
  <body class="h-full flex flex-col bg-gradient-to-b from-slate-900 via-slate-800 to-slate-900">
    <Header />
    <main class="flex-1 max-w-5xl px-4 mx-auto w-full">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  html {
    color-scheme: dark light;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 0.2;
    }
    50% {
      opacity: 0.4;
    }
  }

  .animate-pulse-custom {
    animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
